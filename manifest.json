{
  "manifest_version": 3,
  "name": "Orbi",
  "description": "An extension to display the color palatte of the active tab",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-11.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "storage",
    "scripting",
    "tabs"
  ]
}
